        "@angular/forms": "^5.2.9",
        "@angular/http": "^5.2.9",
        "@angular/platform-browser": "^5.2.9",
        "@angular/platform-browser-dynamic": "^5.2.9",
        "@angular/router": "^5.2.9",
        "angular-pipes": "^7.1.0",
        "bootstrap": "^4.0.0",
        "core-js": "^2.5.3",
        "jquery": "^3.3.1",
        "popper.js": "^1.12.9",
        "rxjs": "^5.5.6",
        "web-animations-js": "^2.3.1",
        "zone.js": "^0.8.19"
    },
    "devDependencies": {
        "@angular/cli": "^1.7.3",
        "@angular/compiler-cli": "^5.2.9",
        "@types/node": "^9.6.0",
        "codelyzer": "^4.2.1",
