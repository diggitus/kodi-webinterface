{
    "name": "kodi-webinterface",
    "version": "1.0.0",
    "description": "KODI webinterface",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --prod",
        "build-dev": "ng build --prod --sourcemaps",
        "test": "ng test --watch=false --single-run=true --code-coverage=true",
        "lint": "ng lint",
        "e2e": "testcafe ie e2e/**/*e2e.ts --selector-timeout 25000 --assertion-timeout 25000 --speed 1.0 -s test-reports/screenshots -r xunit > e2e-xunit.xml",
